open import lib.kernel

type A = Bool
type B = Nat
type C = Bool

M2 :: { Qubit, Qubit -o Bit, Bit }
M2 = { M, M }

id(A) -> A
id = a => a

id2(A, B) -> A, B
id2 = a, b => a, b

thId :: (fn :: {A -> A})
thId = { x => id(x) }

f'(A) -> B
f' = ?f'

g'(B) -> C
g' = ?g'

fg(A) -> C
fg = ?fg


id'(f :: {A -> A}, A) -> A
id' = f, a => f(a)

id''(A) -> A
id''(x) = id((id)(x))

copyNat(Nat) -> Nat, Nat
copyNat(x) = x, x

add(Nat, Nat) -> Nat
add(0, y) = y
add(succ(x), y) = add(1, add(x, y))

double(Nat) -> Nat
double(x) = add(copyNat(x))

