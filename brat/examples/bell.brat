compTest({ A -> B }, { B -> C}) -> { A -> C }
compTest(f, g) = { x => g(f(x)) }

justMeasure :: { c :: Qubit, d :: Qubit -o c :: Bit, d :: Bit }
justMeasure = { c, d => M2(c, d) }

idq :: { Qubit -o Qubit }
idq = { q => q }

phasedBell :: { (th :: Float) -> { c :: Qubit, d :: Qubit -o c :: Bit, d :: Bit } }
phasedBell(th) = {
  H,qid;
  Rz(th),qid;
  M,M
}
